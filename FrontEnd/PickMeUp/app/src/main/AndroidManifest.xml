<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pickmeup">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/basketball"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Home.CourtGames.AddNewGameScreen"
            android:label="@string/title_activity_add_new_game_screen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Account.Address.AddAddressActivity"
            android:label="@string/title_activity_add_address"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Account.Address.AddressesActivity"
            android:label="@string/title_activity_addresses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Account.Password.ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Account.Admin.AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Messages.Messages.MessagesScreen"
            android:label="@string/title_activity_messages_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Messages.Chat.ChatScreen"
            android:label="@string/title_activity_messages_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login.GuestScreen.GuestScreen"
            android:label="@string/title_activity_guest_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Home.CourtGames.LocationGamesScreen"
            android:label="@string/title_activity_location_games_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Home.IndividualGame.InDepthGameScreen"
            android:label="@string/title_activity_in_depth_game_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Tabs.tipsTab" />
        <activity android:name=".Tabs.storeTab" />
        <activity android:name=".Tabs.newsTab" />
        <activity android:name=".webLinks" />
        <activity
            android:name=".Account.NewCourt.AddNewCourtScreen"
            android:label="@string/title_activity_add_new_court_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.SkillHelp" /> <!-- force portrait mode -->
        <activity
            android:name=".Login.SignUp"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".Login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BottomHomeScreen"
            android:label="@string/title_activity_bottom_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Login.LoginActivity" />
        <activity
            android:name=".Login.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Court.CourtAdapter" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>