<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_new_court_screen"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.NewCourt.AddNewCourtScreen"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/title_add_court"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Add New Court"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name_of_new_court"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_add_court"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/street_of_new_court"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_of_new_court"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Street"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/city_of_new_court"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/street_of_new_court"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="City"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <AutoCompleteTextView
        android:id="@+id/state_of_new_court"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_of_new_court"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:completionThreshold="2"
        android:ems="10"
        android:hint="State"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <AutoCompleteTextView
        android:id="@+id/sport_of_new_court"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state_of_new_court"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Sport"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/submit_new_court"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sport_of_new_court"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/hidden_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="94dp"
        android:text="TextView"
        android:visibility="invisible" />
</RelativeLayout>