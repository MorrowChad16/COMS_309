<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/admin_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/admin_arrow"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@+id/address_arrow"
        android:paddingTop="15dp"
        android:text="Admin"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/admin_arrow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_above="@+id/address_arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    <ImageView
        android:id="@+id/password_arrow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@+id/account_email_dynamic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/account_last_name_dynamic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/account_user_name_dynamic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/account_email_dynamic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/account_password"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/new_court_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/admin_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/account_addresses"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/account_email_dynamic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/account_user_name_dynamic"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@null"
        android:enabled="false"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:text="Email"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/account_user_name_dynamic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/account_last_name_dynamic"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:background="@null"
        android:enabled="false"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>

    <EditText
        android:id="@+id/account_last_name_dynamic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/account_first_name_dynamic"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="Last Name"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:background="@null"
        android:enabled="false"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>

    <EditText
        android:id="@+id/account_first_name_dynamic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:text="First Name"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:background="@null"
        android:enabled="false"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"/>

    <Button
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="682dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_button"
        android:text="Logout"
        android:textColor="@android:color/white" />
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/text_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ACCOUNT"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/account_first_name"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="First Name"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@null"
        android:enabled="false"/>


    <EditText
        android:id="@+id/account_second_name"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@+id/account_first_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:text="Last Name"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@null"
        android:enabled="false"/>

    <EditText
        android:id="@+id/account_username"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@+id/account_second_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@null"
        android:enabled="false"/>

    <EditText
        android:id="@+id/account_email"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@+id/account_username"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:text="Email"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@null"
        android:enabled="false"/>

    <TextView
        android:id="@+id/account_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/account_email_dynamic"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@null"
        android:paddingTop="11dp"
        android:text="Change your password"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/account_addresses"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/address_arrow"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@+id/address_arrow"
        android:paddingTop="15dp"
        android:text="Add or remove an address"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/address_arrow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_above="@+id/new_court_arrow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    <TextView
        android:id="@+id/new_court_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="55dp"
        android:layout_toLeftOf="@+id/new_court_arrow"
        android:paddingTop="15dp"
        android:text="Suggest new court"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/new_court_arrow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="55dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    <Button
        android:id="@+id/edit_first_name"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="@android:drawable/ic_menu_edit"/>

    <Button
        android:id="@+id/edit_last_name"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:drawable/ic_menu_edit"/>

    <Button
        android:id="@+id/edit_username"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:drawable/ic_menu_edit"/>

    <Button
        android:id="@+id/edit_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:drawable/ic_menu_edit"/>

    <Button
        android:id="@+id/submit_account_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Submit Changes"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginEnd="30dp"
        android:visibility="invisible"/>

</RelativeLayout>