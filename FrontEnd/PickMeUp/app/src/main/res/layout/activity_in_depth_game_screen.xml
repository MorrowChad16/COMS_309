<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.IndividualGame.InDepthGameScreen"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/date_of_game_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_of_game"
        android:layout_alignStart="@+id/date_of_game"
        android:layout_alignLeft="@+id/date_of_game"
        android:layout_alignEnd="@+id/date_of_game"
        android:layout_alignRight="@+id/date_of_game"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="18dp"
        android:text="Game date"
        android:textSize="14sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/start_time_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_of_game"
        android:layout_alignStart="@+id/time_of_game"
        android:layout_alignLeft="@+id/time_of_game"
        android:layout_alignEnd="@+id/time_of_game"
        android:layout_alignRight="@+id/time_of_game"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Start time"
        android:textSize="14sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/join_game_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:text="JOIN GAME"
        android:background="@drawable/border"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/court_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:text="Court Name"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address_of_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/court_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/out_of_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_of_game_static"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:text="0/4"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/players_static_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/out_of_players"
        android:layout_alignStart="@+id/out_of_players"
        android:layout_alignLeft="@+id/out_of_players"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="Players"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/miles_away_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/court_name"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/address_of_game"
        android:layout_toRightOf="@+id/address_of_game"
        android:text="0.0"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/miles_away_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miles_away_dynamic"
        android:layout_alignStart="@+id/miles_away_dynamic"
        android:layout_alignLeft="@+id/miles_away_dynamic"
        android:layout_alignEnd="@+id/miles_away_dynamic"
        android:layout_alignRight="@+id/miles_away_dynamic"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="mi"
        android:textSize="18sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/team_one_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/players_static_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:text="Team 1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/team_1_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team_one_title"
        android:layout_alignStart="@+id/team_one_title"
        android:layout_alignLeft="@+id/team_one_title"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/team_2_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team_two_title"
        android:layout_alignStart="@+id/team_two_title"
        android:layout_alignLeft="@+id/team_two_title"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/team_two_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/players_static_text"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/team_one_title"
        android:layout_toRightOf="@+id/team_one_title"
        android:text="Team 2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/date_of_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miles_away_static"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:text="Date"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/time_of_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miles_away_static"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/date_of_game"
        android:layout_toRightOf="@+id/date_of_game"
        android:text="Time"
        android:textColor="@android:color/black"
        android:textSize="24sp" />
</RelativeLayout>