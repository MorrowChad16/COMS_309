<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/guest_team_1_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/guest_time_date"
                        android:text="Team 1:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/guest_team_2_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/guest_team_1_score"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/guest_time_date"
                        android:text="Team 2:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/guest_time_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/guest_gameCourtName"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="10dp"
                        android:text="Date and time"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/guest_gameCourtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="10dp"
                        android:text="Court Name"
                        android:textColor="#1A1A1A"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/guestGameTypeView"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="-14dp"
                        android:scaleType="matrix" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>